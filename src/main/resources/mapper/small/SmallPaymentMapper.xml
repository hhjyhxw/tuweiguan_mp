<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.icloud.modules.small.dao.SmallPaymentMapper">


    <!-- 基础map -->
    <resultMap type="com.icloud.modules.small.entity.SmallPayment" id="BaseResultMap">
     <id property="id" column="id"/>
     <result property="paySn" column="pay_sn"/>
     <result property="status" column="status"/>
     <result property="payWay" column="pay_way"/>
     <result property="payAmount" column="pay_amount"/>
     <result property="payFee" column="pay_fee"/>
     <result property="userId" column="user_id"/>
     <result property="openid" column="openid"/>
     <result property="transactionId" column="transaction_id"/>
     <result property="payTime" column="pay_time"/>
     <result property="createTime" column="create_time"/>
     <result property="modifyTime" column="modify_time"/>
    </resultMap>

   <!-- 基础字段列 -->
   <sql id="Base_Column_List" >
id,pay_sn,status,pay_way,pay_amount,pay_fee,user_id,openid,transaction_id,pay_time,create_time,modify_time
    </sql>


<select id="queryMixList" resultMap="BaseResultMap">
select * from t_small_payment t
<where>
<if test="id != null">
    and t.id = #{id}
</if>
<if test="pay_sn != null">
    and t.pay_sn = #{pay_sn}
</if>
<if test="status != null">
    and t.status = #{status}
</if>
<if test="pay_way != null">
    and t.pay_way = #{pay_way}
</if>
<if test="pay_amount != null">
    and t.pay_amount = #{pay_amount}
</if>
<if test="pay_fee != null">
    and t.pay_fee = #{pay_fee}
</if>
<if test="user_id != null">
    and t.user_id = #{user_id}
</if>
<if test="openid != null">
    and t.openid = #{openid}
</if>
<if test="transaction_id != null">
    and t.transaction_id = #{transaction_id}
</if>
<if test="pay_time != null">
    and t.pay_time = #{pay_time}
</if>
<if test="create_time != null">
    and t.create_time = #{create_time}
</if>
</where>
</select>
</mapper>